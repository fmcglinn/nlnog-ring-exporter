# NLNOG Ring Prometheus Exporter Configuration
# Copy this file to .env and adjust values as needed.

# NLNOG API
NLNOG_API=https://api.ring.nlnog.net/1.0/nodes/active
NLNOG_API_TIMEOUT=10

# SSH settings
# Persistent SSH sessions are always enabled.
SSH_USERNAME=rise
SSH_TIMEOUT=3
SSH_CONNECT_TIMEOUT=5
SSH_SUBPROCESS_TIMEOUT=15
SSH_KEY_PATH=/app/ssh/id_ed25519
SSH_CONTROL_PATH_TEMPLATE=/tmp/ssh-control/nlnog-%r@%h:%p

# Ping settings
PING_COUNT=10
PING_TIMEOUT=5

# Startup settings
# Number of parallel workers for establishing SSH sessions during startup
STARTUP_MAX_WORKERS=50

# Application settings
THREADS=100
CACHE_REFRESH_INTERVAL=300
FLASK_HOST=0.0.0.0
FLASK_PORT=8000
LOG_LEVEL=INFO
DEBUG=false
